<script>
   let data = [
     {value: .54, color: '#ffc107'},
     {value: .87, color: '#28a745'},
     {value: .47, color: '#17a2b8'},
     {value: .73, color: '#dc3545'},
   ];
    $('.circle-progress').each((i,el) => {
      $(el).parent().find('span').text(data[i].value + '%');
      $(el).circleProgress({
        value: data[i].value,
        thickness: 8,
        lineCap: 'round',
        fill: {
            color: data[i].color
        }
    });
  });
</script>