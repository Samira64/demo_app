<div class="row mb-4 mt-5">
    <div class="col-12">
        <h4>Alarms</h4>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-hover mb-4 alarms-table">
            <thead>
                <tr>
                    <th scope="col" class="pl-4">No</th>
                    <th scope="col">Name</th>
                    <th scope="col">System Name</th>
                    <th scope="col">Region</th>
                    <th scope="col">Location</th>
                    <th scope="col">Value</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row" class="pl-4">1</th>
                    <td>High ammonia levels</td>
                    <td>Washroom</td>
                    <td>Bangna</td>
                    <td>Zone A</td>
                    <td>30</td>
                    <td class="text-center">
                        <button type="button" class="btn btn-outline-purple">Acknowledge</button>
                    </td>
                </tr>
                <tr>
                    <th scope="row" class="pl-4">2</th>
                    <td>Door left opened</td>
                    <td>Access Control</td>
                    <td>Nawamin</td>
                    <td>Sales Office</td>
                    <td>1%</td>
                    <td class="text-center">
                        <button type="button" class="btn btn-outline-purple">Acknowledge</button>
                    </td>
                </tr>
                <tr>
                    <th scope="row" class="pl-4">3</th>
                    <td>Abnormal temperature</td>
                    <td>Ambient</td>
                    <td>Chaengwattana</td>
                    <td>East Hallway</td>
                    <td>29%</td>
                    <td class="text-center">
                        <button type="button" class="btn btn-outline-purple">Acknowledge</button>
                    </td>
                </tr>
                <tr>
                    <th scope="row" class="pl-4">4</th>
                    <td>High ammonia levels</td>
                    <td>Washroom</td>
                    <td>Rama2</td>
                    <td>Storage room</td>
                    <td>40</td>
                    <td class="text-center">
                        <button type="button" class="btn btn-outline-purple">Acknowledge</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

</div>
