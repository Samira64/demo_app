<div class="row">
    <div class="col-12 my-4">
        <h4>Key Metrics</h4>
    </div>

    <div class="col-6">
        <div class="card box-shadowed">
            <div class="card-body">
                <div class="card-title pt-0">
                    <h5>Water Usage</h5>
                    <div class="icon-three-dots"></div>
                </div>

                <div class="metric-keys">
                    <div class="metric-key-item pr-4">
                        <div class="circle bg-warning"></div>
                        <div class="metric-name ml-2">Rama 2</div>
                    </div>
                    <div class="metric-key-item pr-4">
                        <div class="circle bg-success"></div>
                        <div class="metric-name ml-2">Bangna</div>
                    </div>
                    <div class="metric-key-item pr-4">
                        <div class="circle bg-info"></div>
                        <div class="metric-name ml-2">Nawamin</div>
                    </div>
                    <div class="metric-key-item pr-4">
                        <div class="circle bg-danger"></div>
                        <div class="metric-name ml-2">Chaengwattana </div>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-around" >
                    <div class="col-3">       
                        <h4>
                            <span class="badge badge-warning py-3 w-100">
                                65 <sup>m3</sup><span class="d-block">+6%</span>
                            </span>
                        </h4>
                    </div>

                    <div class="col-3">      
                        <h4>
                            <span class="badge badge-success py-3 w-100">
                                63 <sup>m3</sup><span class="d-block">+11%</span>
                            </span>
                        </h4>
                    </div>

                    <div class="col-3">      
                        <h4>
                            <span class="badge badge-info py-3 w-100">
                                58 <sup>m3</sup><span class="d-block">-4%</span>
                            </span>
                        </h4>
                    </div>

                    <div class="col-3">      
                        <h4>
                            <span class="badge badge-danger py-3 w-100">
                                61 <sup>m3</sup><span class="d-block">-5%</span>
                            </span>
                        </h4>
                    </div>
                </div> 

            </div>
        </div>
    </div>


    <div class="col-6">
        <div class="card box-shadowed h-100">
            <div class="card-body">
                <div class="card-title pt-0">
                    <h5>Electricity Usage</h5>
                    <div class="icon-three-dots"></div>
                </div>
                <div class="metric-keys">
                    <div class="metric-key-item pr-4">
                        <div class="circle bg-warning"></div>
                        <div class="metric-name ml-2">Rama 2</div>
                    </div>
                    <div class="metric-key-item pr-4">
                        <div class="circle bg-success"></div>
                        <div class="metric-name ml-2">Bangna</div>
                    </div>
                    <div class="metric-key-item pr-4">
                        <div class="circle bg-info"></div>
                        <div class="metric-name ml-2">Nawamin</div>
                    </div>
                    <div class="metric-key-item pr-4">
                        <div class="circle bg-danger"></div>
                        <div class="metric-name ml-2">Chaengwattana</div>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-around" >
                    <div class="col-3">       
                        <h4>
                            <span class="badge badge-warning py-3 w-100">
                                4040 kWh<span class="d-block">+5%</span>
                            </span>
                        </h4>
                    </div>

                    <div class="col-3">      
                        <h4>
                            <span class="badge badge-success py-3 w-100">
                                4040 kWh<span class="d-block">+25%</span>
                            </span>
                        </h4>
                    </div>

                    <div class="col-3">      
                        <h4>
                            <span class="badge badge-info py-3 w-100">
                                4040 kWh<span class="d-block">-15%</span>
                            </span>
                        </h4>
                    </div>

                    <div class="col-3">      
                        <h4>
                            <span class="badge badge-danger py-3 w-100">
                                4040 kWh<span class="d-block">-5%</span>
                            </span>
                        </h4>
                    </div>
                </div> 
            </div>
        </div>
    </div>
</div>

